apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: acs-central
  namespace: openshift-gitops
  labels:
    type: infrastructure
    rhacs: core
spec:
  destination:
    name: in-cluster
  project: hub
  source:
    directory:
      jsonnet: {}
      recurse: true
    path: cluster-go/infrastructure/rhacs-central
    repoURL: https://github.com/joelapatatechaude/hub
  syncPolicy:
    syncOptions:
    - Prune=true
    - CreateNamespace=true
